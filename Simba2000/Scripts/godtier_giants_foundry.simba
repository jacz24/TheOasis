      Self.BarOneMakeIdx := 0;
      Self.BarTwoMakeIdx := 1;
    end;

    ETask.IRON_STEEL:
    begin
      Self.BarOne := 'Iron bar';
      Self.BarTwo := 'Steel bar';
      Self.BarOneMakeIdx := 1;
      Self.BarTwoMakeIdx := 2;
    end;

    ETask.STEEL_MIHTRIL:
    begin
      Self.BarOne := 'Steel bar';
      Self.BarTwo := 'Mithril bar';
      Self.BarOneMakeIdx := 2;
      Self.BarTwoMakeIdx := 3;
    end;

